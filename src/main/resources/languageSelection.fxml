<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>

<VBox alignment="CENTER" spacing="10.0" xmlns:fx="http://javafx.com/fxml" fx:controller="controller.LanguageSelectionController" fx:id="languageSelectionWindow">

    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <ImageView fitHeight="120" fitWidth="120" preserveRatio="true" layoutX="50">
        <Image url="@/kuvat/safespacelogo.png"/>
    </ImageView>

    <Region prefHeight="1" />
    <Button fx:id="englishButton" text="English" onAction="#handleEnglish" styleClass="menuLanguageButton" prefWidth="150" />
    <Button fx:id="finnishButton" text="Suomi" onAction="#handleFinnish" styleClass="menuLanguageButton" prefWidth="150"/>
    <Button fx:id="japaneseButton" text="日本語" onAction="#handleJapanese" styleClass="menuLanguageButton" prefWidth="150"/>
    <Button fx:id="russianButton" text="Русский" onAction="#handleRussian" styleClass="menuLanguageButton" prefWidth="150"/>
</VBox>