<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.NewPostController" spacing="10" styleClass="postPage"
      prefWidth="350" prefHeight="550">

    <HBox alignment="TOP_LEFT" spacing="10" VBox.vgrow="NEVER">
        <Button text="X" fx:id="closeButton" onAction="#handleClose" styleClass="closeButton"/>
    </HBox>

    <HBox alignment="CENTER" spacing="10">
        <Label text="Create a New Post" styleClass="headerLabel"/>
    </HBox>

    <VBox alignment="CENTER" spacing="15">
        <Button text="Choose Image" fx:id="chooseImageButton" styleClass="chooseImageButton"/>
        <ImageView fx:id="imageView" fitWidth="280" preserveRatio="true" styleClass="imagePreview"/>
    </VBox>

    <VBox spacing="15" alignment="CENTER">
        <TextArea fx:id="captionTextArea" promptText="Write a caption..." prefRowCount="1" styleClass="captionArea"/>
        <Region prefHeight="1.5" styleClass="line"/>
        <TextArea fx:id="textPostArea" promptText="Share your thoughts..." prefRowCount="3" styleClass="captionArea"/>
    </VBox>

    <HBox alignment="CENTER">
        <Button text="Post" fx:id="postButton" styleClass="postButton"/>
    </HBox>

</VBox>
