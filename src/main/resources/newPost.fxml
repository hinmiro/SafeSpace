<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.NewPostController" spacing="10" styleClass="postPage">

    <HBox alignment="TOP_LEFT">
        <Button text="X" fx:id="closeButton" onAction="#handleClose" styleClass="closeButton"/>
    </HBox>

    <Label text="Create a New Post" styleClass="postLabel"/>

    <Button text="Choose Image" fx:id="chooseImageButton" styleClass="chooseImageButton"/>

    <ImageView fx:id="imageView" fitWidth="280" preserveRatio="true" styleClass="imagePreview"/>

    <TextArea fx:id="captionTextArea" promptText="Write a caption..." prefRowCount="2" styleClass="captionArea"/>

    <Button text="Post" fx:id="postButton" styleClass="postButton"/>
</VBox>


