<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane styleClass="borderWide" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MainController">

    <top>
        <VBox>
            <BorderPane styleClass="header-background">
                <left>
                    <ImageView fitHeight="100" fitWidth="80" preserveRatio="true">
                        <image>
                            <Image url="@/kuvat/safespacelogo.png" />
                        </image>
                    </ImageView>
                </left>
                <center>
                    <Label styleClass="headerMain" text="SafeSpace" />
                </center>
                <right>
                    <VBox alignment="CENTER">
                        <Button fx:id="leaveMessageButton" styleClass="messageButton" text="âœ‰">
                            <VBox.margin>
                                <Insets left="10" right="20" />
                            </VBox.margin>
                        </Button>
                    </VBox>
                </right>
            </BorderPane>
            <Region prefHeight="1.5" styleClass="line" />
        </VBox>
    </top>

    <center>
        <VBox fx:id="contentBox" alignment="CENTER" minHeight="300" spacing="20.0" BorderPane.alignment="CENTER">
            <ImageView fx:id="loadingBox" fitHeight="498.0" fitWidth="262.0" pickOnBounds="true" preserveRatio="true">
                <Image url="@/kuvat/coggers-poggers.gif"/>
            </ImageView>
            <ListView fx:id="feedListView" layoutX="20" layoutY="100" prefHeight="650" prefWidth="360">
                <Label fx:id="noPostsLabel" styleClass="noPostsLabel" text="Nothing on main feed..." />
            </ListView>
        </VBox>
        <!-- <Pane fx:id="newWindow" visible="false"/>  -->
    </center>

    <bottom>
        <VBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">

            <HBox fx:id="postMenu" alignment="CENTER" spacing="10.0" visible="false">
                <Button fx:id="createPicPostButton" styleClass="createPost" text="Share an image" />
                <Button fx:id="createTextPostButton" styleClass="createPost" text="Share your thoughts" />
            </HBox>

            <Button fx:id="newPostButton" styleClass="newButton" text="+">
                <VBox.margin>
                    <Insets bottom="10" />
                </VBox.margin>
            </Button>

            <HBox alignment="CENTER" spacing="15.0" styleClass="footer-background" BorderPane.alignment="CENTER">
                <Button fx:id="homeButton" styleClass="mainbutton" text="Home" />
                <Button fx:id="profileButton" styleClass="mainbutton" text="Profile" />
            </HBox>
        </VBox>
    </bottom>

</BorderPane>
