<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="550" prefWidth="350" styleClass="postPage" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.NewPostController">

    <top>
        <VBox>
            <BorderPane styleClass="header-background">
                <left>
                    <ImageView fitHeight="100" fitWidth="80" preserveRatio="true">
                        <image>
                            <Image url="@/kuvat/safespacelogo.png" />
                        </image>
                    </ImageView>
                </left>
                <center>
                    <Label styleClass="headerMain" text="SafeSpace" />
                </center>
                <right>
                    <VBox alignment="CENTER">
                        <Button fx:id="closeButton" onAction="#handleClose" prefHeight="26.0" prefWidth="27.0" styleClass="closeButton" text="X">
                            <VBox.margin>
                                <Insets left="10" right="20" />
                            </VBox.margin>
                        </Button>
                    </VBox>
                </right>
            </BorderPane>
            <Region prefHeight="1.5" styleClass="line" />
        </VBox>
    </top>

    <HBox alignment="TOP_LEFT" />

    <VBox alignment="CENTER" spacing="15">
        <Region prefHeight="1.5" styleClass="line" />
    </VBox>

    <center>
        <VBox spacing="10">
            <Label prefHeight="74.0" prefWidth="162.0" styleClass="textPostLabel" text="Share Your Thoughts:">
                <VBox.margin>
                    <Insets left="10" right="10" />
                </VBox.margin>
            </Label>
            <TextArea fx:id="textPostArea" prefHeight="271.0" prefRowCount="6" prefWidth="330.0" promptText="What's on your mind..." styleClass="textPostArea">
                <VBox.margin>
                    <Insets left="10" right="10" />
                </VBox.margin>
            </TextArea>
        </VBox>
    </center>

    <bottom>
        <VBox alignment="CENTER">
         <children>
   
                  <Button fx:id="postButton" prefHeight="0.0" prefWidth="62.0" styleClass="postButton" text="Post">
                   <VBox.margin>
                       <Insets bottom="30" />
                   </VBox.margin>
               </Button>
         </children>
        </VBox>
    </bottom>

</BorderPane>
