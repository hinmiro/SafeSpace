<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.ProfileController" stylesheets="@styles.css" styleClass="borderWide">

    <top>
        <VBox>
            <BorderPane styleClass="header-background">
                <left>
                    <ImageView fitHeight="100" fitWidth="80" preserveRatio="true">
                        <image>
                            <Image url="@/kuvat/safespacelogo.png"/>
                        </image>
                    </ImageView>
                </left>
                <center>
                    <Label text="SafeSpace" styleClass="headerMain"/>
                </center>
                <right>
                    <VBox alignment="CENTER">
                        <Button text="â‰¡" fx:id="settingsProfileID" styleClass="settingsProfile">
                            <VBox.margin>
                                <Insets left="10" right="20" />
                            </VBox.margin>
                        </Button>
                    </VBox>
                </right>
            </BorderPane>
            <Region prefHeight="1.5" styleClass="line"/>
        </VBox>
    </top>

    <center>
        <VBox alignment="TOP_LEFT" spacing="20.0" BorderPane.alignment="CENTER">
            <HBox alignment="TOP_LEFT" spacing="20.0">
                <ImageView fx:id="profileImageView" fitHeight="100" fitWidth="100">
                    <HBox.margin>
                        <Insets top="7" left="7"/>
                    </HBox.margin>
                </ImageView>
                <VBox alignment="CENTER_LEFT" spacing="5.0">
                    <Label fx:id="usernameLabel" text="Username" styleClass="usernameLabel" />
                    <Label fx:id="registeredLabel" text="Registered: 01.01.2024" styleClass="registeredLabel" />
                </VBox>
            </HBox>

            <VBox alignment="CENTER_LEFT" spacing="5.0">
                <Label fx:id="nameLabel" text="Full Name" styleClass="nameLabel">
                    <VBox.margin>
                        <Insets left="10"  />
                    </VBox.margin>
                </Label>
                <Label fx:id="bioLabel" text="Bio goes here..." styleClass="bioLabel">
                    <VBox.margin>
                        <Insets left="10" />
                    </VBox.margin>
                </Label>
            </VBox>

            <Region prefHeight="1.5" styleClass="line"/>

            <VBox fx:id="postArea" alignment="CENTER" spacing="10.0">
                <Label text="No posts yet..." />
            </VBox>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="15.0" BorderPane.alignment="CENTER" styleClass="footer-background">
            <Button text="Home" fx:id="homeButton" styleClass="mainbutton"/>
            <Button text="Profile" fx:id="profileButton" styleClass="mainbutton"/>
        </HBox>
    </bottom>

</BorderPane>

